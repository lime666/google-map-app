<p style="color: green"><%= notice %></p>

<h1>All Users</h1>


  <% @users.each do |user| %>
    <div class="container">
      <div class="row">
        <div class="col">
          <%= render 'admin/users/user', user: user %>
         </div>
        <div class="col">
          <%= link_to "Show this user", admin_user_path(user) %>
        </div>
      </div>
    </div>
    <hr>
  <% end %>
</div>

<%= link_to "New user", new_admin_user_path %>

<div id="users">
  <% @users.each do |user| %>
    <table class="table table-striped table-bordered table-sm" style="background-color: #dee2e6;">
      <thead class="table-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Watch profile</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= render 'admin/users/user', user: user %></td>
          <td><%= link_to "Show this user", admin_user_path(user) %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>

<%= link_to "New user", new_admin_user_path %>
