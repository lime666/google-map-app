<%= form_with(scope: :user, url: admin_users_path) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control", id: "input-name", placeholder: "Enter your name, please" %>
  </div>
  <br>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class: "form-control", id: "input-email", placeholder: "Enter your email" %>
  </div>
  <br>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.text_field :password_digest, class: "form-control", id: "input-password", placeholder: "Final step" %>
  </div>
  <br>

  <div>
    <%= form.submit 'Submit', class: 'btn btn-dark' %>
  </div>
<% end %>
